# upstart file at /etc/init/waartaa.conf

author "{{ author_name }} <{{ author_email }}>"

start on runlevel [2345]
stop on runlevel [06]

respawn
respawn limit 10 5

script
  APP_DIR={{ app_dir }}
  LOG_FILE={{ log_file }}
  sudo su - {{ user }} \
  PORT={{ port }} \
  MONGO_URL={{ mongo_url }} \
  MONGO_OPLOG_URL={{ mongo_oplog_url }} \
  ROOT_URL={{ root_url }} \
  /usr/bin/node "$APP_DIR/main.js" 2>&1 >> $LOG_FILE
end script
